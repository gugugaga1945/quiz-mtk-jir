  <style>
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #121212;
      font-family: Arial, sans-serif;
      color: white;
    }

    .app {
      width: 100%;
      max-width: 350px;
      background: #1e1e1e;
      padding: 20px;
      border-radius: 12px;
      text-align: center;
    }

    button {
      padding: 10px;
      margin: 5px;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    .start button {
      background: #ff9500;
      color: black;
    }

    input {
      width: 100%;
      padding: 10px;
      font-size: 18px;
      margin-top: 10px;
      border-radius: 8px;
      border: none;
      text-align: center;
    }

    .hidden {
      display: none;
    }
  </style>
